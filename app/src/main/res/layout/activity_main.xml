<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#191919"
    android:layout_height="match_parent"
    tools:context="com.example.abhishekjpr.retrofitjsonexample.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sofia, Bulgaria"
        android:gravity="end"
        android:textSize="50dp"
        android:id="@+id/cityTextview"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="#ffffff"
        android:paddingTop="5dp"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tue, 19 Jan 2016 11:29 am EET"
        android:id="@+id/dateAndTimeTextview"
        android:layout_below="@+id/cityTextview"
        android:layout_alignRight="@+id/cityTextview"
        android:layout_alignEnd="@+id/cityTextview" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-4"
        android:gravity="center"
        android:textSize="40dp"
        android:id="@+id/tempTextview"
        android:layout_below="@+id/dateAndTimeTextview"
        android:layout_marginTop="127dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mostly Clouds"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:id="@+id/statusTextview"
        android:layout_below="@+id/tempTextview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:layout_gravity="end"
        android:id="@+id/refreshButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
